{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "provisioners": [
    {
        "type": "shell",
        "inline": [
            "sleep 30",
            "/usr/bin/yum -y update",
            "/usr/bin/yum -y install gcc-c++ make",
            "curl --silent --location https://rpm.nodesource.com/setup_8.x | sudo bash -",
            "/usr/bin/yum -y install nodejs",
            "mkdir -p /usr/local/node-app"
        ]
    },
    {
      "type": "file",
      "source": ".",
      "destination": "/usr/local/node-app"
    },
    {
        "type": "shell",
        "inline": [
            "cd /usr/local/node-app",
            "npm init -f",
            "npm install",
            "npm start"
        ]
    }
  ],

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn-ami-hvm-*",
        "root-device-type": "ebs"
      },
      "owners": ["137112412989"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "root",
    "ami_name": "node-app-{{timestamp}}"
  }]
}
