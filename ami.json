{
  "provisioners": [
    {
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo /usr/bin/yum -y update",
            "sudo /usr/bin/yum -y install gcc-c++ make",
            "curl --silent --location https://rpm.nodesource.com/setup_8.x | sudo bash -",
            "sudo /usr/bin/yum -y install nodejs",
            "sudo mkdir -p /usr/local/node-app",
            "sudo chown ec2-user:ec2-user /usr/local/node-app"
        ]
    },
    {
      "type": "file",
      "source": ".",
      "destination": "/usr/local/node-app"
    },
    {
        "type": "shell",
        "inline": [
            "cd /usr/local/node-app",
            "npm init -f",
            "npm install",
            "npm start"
        ]
    }
  ],

  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn-ami-hvm-*",
        "root-device-type": "ebs"
      },
      "owners": ["137112412989"],
      "most_recent": true
    },
    "instance_type": "t2.small",
    "ssh_username": "ec2-user",
    "ami_name": "node-app-{{timestamp}}"
  }]
}
